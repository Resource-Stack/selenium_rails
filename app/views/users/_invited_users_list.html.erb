<p><strong>Invited Users:</strong> </p>
<table id="invitedUsers">
    <thead>
        <tr>
            <th>Email</th>
            <th>Invited At</th>
            <th>Invitation Accepted</th>
            <th colspan="4">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @user.invitations.each do |user| %>
        <tr>
            <td><%= user.email %></td>
            <td><%= user.created_at %></td>
            <td><%= !user.invitation_accepted_at.nil? %></td>
            <td><span class='btn' style="color: #4680b5 !important;"><%= link_to_if user.invitation_accepted_at.nil?, 'Delete Invitation', remove_invitation_path(:user_id=> user.id), method: :delete, data: { confirm: 'Are you sure you want to remove the invitation?' } %> </span></td>
        </tr>
        <% end %>
        <% if @user.invitations.count == 0 %>
        <tr>
            <td align="center" colspan="4">
                <center>No invited users available!</center>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<style>
    .btn>a {
        color: inherit;
    }
</style>