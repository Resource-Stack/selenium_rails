<h1>Listing test_suites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@test_suites.nil? %>
    <% @test_suites.each do |test_suite| %>
      <tr>
        <td><%= test_suite.name %></td>
        <td><%= link_to 'Show', test_suite %></td>
        <td><%= link_to 'Edit', edit_test_suite_path(test_suite) %></td>
        <td><%= link_to 'Destroy', test_suite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% else %>
    <h3>PLEASE SELECT ENVIRONMENT FROM THE HOME PAGE </h3>
    <% end -%>
  </tbody>
</table>

<br>

<%= link_to 'New Test suite', new_test_suite_path %>
