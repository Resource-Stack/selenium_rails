<div class="row" id="middle">
	
  <div class="row" id="enviro-holder">
	
	<%= form_tag('/home') do %>
		<div class="col-md-5">Select an Environment:</div>
		<div class="col-md-5"><%= collection_select(:environment, :id, @environments, :id, :name, :include_blank => true)%></div>
		<%= submit_tag "Go", class: "btn btn-primary go" %>
	  
	<% end %>
	</div>
	<div class="col-md-13" id="create_enviro"><%= link_to "Create a New Environment", new_environment_path, class: "btn btn-success" %></div>
	<div class="col-md-13" id="list_enviro"><%= link_to "List All the Environments", environments_path, class: "btn btn-success" %></div>
</div>
