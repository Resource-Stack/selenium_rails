<h3 style="text-align:center;">Test Cases for <%#= @test_suite.name %></h3>
<table id="sch-cases" style="width:100%">
	<thead>
		<tr>
  			<th>Sequence Number</th>
  			<th>Status</th>
  			<th>Start time</th>
  			<th>End Time</th>
        <th>Error Description</th>
  			<th>Screenshot File Location</th>
        
		</tr>
	</thead>
	<tbody>
	  <% @result_cases.each do |rc| %>
		<tr>
  			<td><%= CaseSuite.where(test_case_id: rc.test_case_id).pluck(:sequence).join(',') %></td>
        <% if rc.rd_id == 1%>
          <td>Completed</td>
        <% else %>
          <td>Failed</td>
        <% end -%>
        <td><%= rc.created_at %></td>
  			<td><%= rc.updated_at %></td>
        <td></td>
        <% if !rc.screenshot_file_location.nil? %>
          <td><%= link_to rc.screenshot_file_location,  {controller: "environments", action: "images", file_name: rc.screenshot_file_location }, target: :_blank %></td>
        <% else %>
          <td></td>
        <% end -%>
		</tr>
	  <% end %>
	</tbody> 
</table>
<script>
  $("#sch-cases").dataTable();
</script>



