<h1 style="text-align:center;">Test Suites for <%= "#{@environment_name}" %></h1>
<%= link_to "Import Suite", "/import_suite", class: "btn btn-primary", id: "import" %>
<form action="/run_suites" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<table id="suite-table-dude">
		<thead>
			<tr>
				<th>Run?</th>
				<th>ID</th>
				<th>Name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		  <% @test_suites.each do |ts| %>
			<tr>
				<td><input type="checkbox" class="checkbox1" name="suite[<%= ts.id %>]" id="suite[<%= ts.id %>] value="<%= ts.id %>"></td>
				<td><%= ts.id %></td>
				<td><%= ts.name %></td>
				<td class="button-cell"><%= link_to "Cases", {controller: "test_suites", action: "test_cases", id: ts.id }, "data-toggle" => "modal", "data-target" => "#cases", class: "btn btn-default btn-sm", remote: true %>
					<%= link_to "Edit", {controller: "test_cases", action: "index", id: ts.id }, class: "btn btn-default btn-sm" %>
					<%= link_to "Schedule", {controller: "test_suites", action: "tests_ran", id: ts.id }, class: "btn btn-default btn-sm", "data-toggle" => "modal", "data-target" => "#cases", remote: true %>
					<%= link_to 'Destroy', {controller: "test_suites", action: "destroy", id: ts.id }, method: "delete", class: "btn btn-default btn-sm" %>
				</td>
			</tr>
		  <% end %>
		</tbody>
	</table>
	</br></br><%= submit_tag "Schedule Later", :class => "btn btn-danger"%>
	<%= submit_tag "Schedule Now", :class => "btn btn-danger"%>
</form>
<script>
	$("#suite-table-dude").dataTable();
</script>
