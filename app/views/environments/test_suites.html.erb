<h1 style="text-align:center;">Test Suites for <%= "#{@environment_name}" %></h1>
<%= link_to "Import Suite", "/import_suite", class: "btn btn-primary", id: "import" %>
	<%= link_to 'Download', export_results_path(format: :csv), class: "btn btn-primary"%>
<form action="/run_suites" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<table id="suite-table-dude">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
		  <% @test_suites.each do |ts| %>
			<tr>
				<td><%= ts.id %></td>
				<td><%= ts.name %></td>
				<td class="button-cell">
					<%= link_to "Cases", {controller: "test_cases", action: "index", id: ts.id }, class: "btn btn-default btn-sm" %>
					<%= link_to "Schedule", {controller: "test_suites", action: "tests_ran", id: ts.id }, class: "btn btn-default btn-sm", "data-toggle" => "modal", "data-target" => "#cases", remote: true %>
					<%= hidden_field_tag :id, ts.id  %>
					<%= link_to 'Destroy', {controller: "test_suites", action: "destroy", id: ts.id }, method: "delete", class: "btn btn-default btn-sm" %>
					<button id="btnScheduleNow" class="btn btn-primary btn-sm" data-id="<%=ts.id%>" data-name="<%= ts.name %>">Schedule Now</button>
					<button id="btnScheduleLater" class="btn btn-secondary btn-sm" data-id="<%=ts.id%>" data-name="<%= ts.name %>">Periodic Schedule</button>
				</td>
			</tr>
		  <% end %>
		</tbody>
	</table>
</form>
<script>
	$("#suite-table-dude").dataTable();
</script>
